<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SIM</title>
    <link href="/stylesheets/page-center.css" type="text/css" rel="stylesheet" media="screen,projection">
    <% include ./templates/css-imports.ejs %>
</head>
<body class="orange darken-3">
<div class="container">
    <div id="loginDialog">
        <div class="row">
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-content white-text">
                        <span class="card-title"><img src="/images/login-default.png"></span>

                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="password" class="validate">
                                <label for="password">Password</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn-large" id="logIn">Log In</a>
                        <a class="waves-effect waves-light btn-large" href="/register">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ./templates/js-imports.ejs %>
    <script type="text/javascript">
        $('#logIn').click(function () {
            $.ajax({
                dataType: "json",
                url: window.location + 'logon',
                type: "POST",
                crossDomain: true,
                data: {
                    'username': $('#email').val(),
                    'password': $('#password').val()
                },
                success: function (res) {
                    window.location.pathname = '/dashboard';
                },
                error: function (err) {
                    console.log(err);
                }
            });
        });

    </script>
</div>
</body>
</html>
